<MudGrid>
    <MudItem xs="12" sm="12" md="6" lg="6" xl="6">
        <MudText Class="m-4" Typo="Typo.h3"> Add Post Page</MudText>
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">
            <MudText Align="Align.Left">
                you  can add your weblog posts
                <br />
                directly from this page
            </MudText>
        </MudAlert>
        <MudButton Class="m-4" Link="/admin_handler_add_blog_post" Variant="Variant.Filled" Color="Color.Primary">
            Go To Add Post Page
        </MudButton>
    </MudItem>
    <MudItem xs="12" sm="12" md="6" lg="6" xl="6">
        <MudText Typo="Typo.h3" Class="m-4">All Posts Page</MudText>
