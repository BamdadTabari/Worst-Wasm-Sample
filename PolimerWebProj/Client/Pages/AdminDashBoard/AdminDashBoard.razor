            </MudText>
        </MudAlert>
        <MudButton Class="m-4" Link="/admin_handler_products_page" Variant="Variant.Filled" Color="Color.Primary">
            Go To Products Page
        </MudButton>
    </MudItem>

    <MudItem xs="12" sm="12" md="6" lg="6" xl="6">
        <MudText Typo="Typo.h3" Class="m-4">WebSite Gallery</MudText>
