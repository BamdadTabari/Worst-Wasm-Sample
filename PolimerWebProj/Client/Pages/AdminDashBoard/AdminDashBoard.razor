            </MudText>
        </MudAlert>
        <MudButton Class="m-4" Link="/admin_handler_add_product" Variant="Variant.Filled" Color="Color.Primary">
            Go To Add Product Page
        </MudButton>
    </MudItem>
    <MudItem xs="12" sm="12" md="6" lg="6" xl="6">
        <MudText Typo="Typo.h3" Class="m-4">All Products Page</MudText>
