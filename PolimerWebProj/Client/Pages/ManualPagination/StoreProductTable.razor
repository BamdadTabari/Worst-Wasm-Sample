@if (ProductDtos.Count > 0)
{
<MudGrid>
    @foreach (var product in ProductDtos)
    {
        <MudItem xs="11" sm="11" md="11" lg="11" xl="11" xxl="11" Class="IBGCBlack IBorder1 my-1 mr-1">
            <div class="row">
                <div class="col-6">
                    <MudText Typo="Typo.h5" Style="font-size: 3vw;">نام:@product.Name</MudText>
                    <MudText Typo="Typo.body2" Style="font-size: 2vw;">قیمت:@product.Price</MudText>
                    <MudText Typo="Typo.body2" Style="font-size: 2vw;"> توضیحات:@product.Description</MudText>
                </div>
                <div class="col-6">
                    <img src="@product.ProductImageAddress" class="img-fluid" alt="@product.ProductImageAlt"/>
                </div>
            </div>
            <MudButton Variant="Variant.Filled" Color="@Color.Primary" OnClick="(()=> GetProductDetail(product.Id))">Read More</MudButton>
        </MudItem>
    }
</MudGrid>
}
else
{
    <MudProgressLinear Color="Color.Primary" Striped="true" Size="Size.Large" Value="90" Class="m-7" />
}